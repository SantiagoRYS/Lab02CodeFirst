@model BibliotecaWebApplication.Models.Autor

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nacionalidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nacionalidad)
        </dd>

        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.Imagen)" alt="Imagen de @Model.Nombres" style="max-width: 200px; max-height: 200px;" />
        </dd>


    </dl>
</div>

<div class="row">
    <h4>Libros Escritos</h4>
    <ul class="list-group list-group-flush">
        @if (Model.AutorLibros.Any())
        {
            foreach (var autorLibro in Model.AutorLibros)
            {
                <li class="list-group-item d-flex align-items-center">
                    <span class="badge text-primary me-2">
                        <i class="bi bi-book"></i>
                    </span>
                    @autorLibro.Libro.Titulo
                </li>
            }
        }
        else
        {
            <li class="list-group-item">Este autor no tiene libros asociados.</li>
        }
    </ul>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.AutorId" class="btn btn-warning"><i class="bi bi-info-circle"></i> Editar</a>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>
