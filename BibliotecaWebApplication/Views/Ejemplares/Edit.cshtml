@model BibliotecaWebApplication.Models.Ejemplar

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Ejemplar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EjemplarId" />
            <div class="form-group">
                <label asp-for="PublicacionId" class="control-label"></label>
                <select asp-for="PublicacionId" class="form-control" asp-items="ViewBag.PublicacionId"></select>
                <span asp-validation-for="PublicacionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstanteId" class="control-label"></label>
                <select asp-for="EstanteId" class="form-control" asp-items="ViewBag.EstanteId"></select>
                <span asp-validation-for="EstanteId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}