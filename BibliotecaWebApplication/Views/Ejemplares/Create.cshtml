@model BibliotecaWebApplication.Models.Ejemplar

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Ejemplar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(model => model.PublicacionId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("PublicacionId", (SelectList)ViewData["PublicacionId"], "Seleccione una publicación", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PublicacionId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="EstanteId" class="control-label"></label>
                <select asp-for="EstanteId" class="form-control" asp-items="ViewBag.EstanteId"></select>
                <span asp-validation-for="EstanteId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}