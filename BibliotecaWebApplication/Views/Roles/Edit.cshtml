@model BibliotecaWebApplication.Models.VeiewModels.RoleViewModel

<h2>Editar Rol</h2>

<form asp-action="Edit" asp-controller="Roles" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Nombre del Rol</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning">
        <i class="bi bi-save"></i> Guardar Cambios
    </button>
    <div>
        <a asp-action="Index" class="btn btn-secondary mt-3">
            &#8592; Volver atrás
        </a>
    </div>
</form>